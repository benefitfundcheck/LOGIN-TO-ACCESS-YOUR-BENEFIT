function formatMoney(num){
return "Â£" + num.toLocaleString(undefined,{minimumFractionDigits:2});
}

/* Animated Balance */
function animateBalance(newBalance){

let start = balance;
let increment = (newBalance-start)/30;

let counter = setInterval(()=>{
start += increment;

if(start >= newBalance){
start = newBalance;
clearInterval(counter);
}

balanceText.innerText=formatMoney(start);

},30);
}

function showTransactions(){

let html="";
transactions.forEach(t=>{
html+=`<div class="transaction">${t} â€¢ ${timeStamp()}</div>`;
});

transactions.innerHTML=html;
}

